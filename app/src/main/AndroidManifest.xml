<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.project.container.containersapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".frame.application.JZXApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".business.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".business.MainActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".business.checkbox.CheckBoxListActivilty"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".business.checkbox.CheckBoxDetailActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity android:name=".business.hangingbox.DXBoxListActivity">
        </activity>
        <activity android:name=".business.hangingbox.DXBoxDetailActivity">
        </activity>
        <activity android:name=".business.boxing.BoxingListActivity">
        </activity>
        <activity android:name=".business.checkgoods.CheckGoodsListActivity">
        </activity>
        <activity android:name=".business.checkgoods.CheckGoodsDetailActivity">
        </activity>
        <activity android:name=".business.NoRolesActivity">
        </activity>
    </application>

</manifest>