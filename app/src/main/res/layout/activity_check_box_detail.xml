<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.project.container.containersapp.business.checkbox.CheckBoxDetailActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_30dp">

        <TextView
            android:id="@+id/tv_jzxdm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/font_20sp"
            android:text="原箱号：TBJU1100112"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_jzxdm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_15dp"
            android:background="@drawable/button_shape">

            <TextView
                android:id="@+id/btn_pass"
                android:layout_width="130dp"
                android:layout_height="@dimen/padding_50dp"
                android:background="@mipmap/bg_button"
                android:gravity="center"
                android:text="验箱通过"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_18sp"/>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_15dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginLeft="@dimen/padding_10dp"
            android:layout_marginRight="@dimen/padding_10dp"
            android:background="@drawable/bg_shpe_2"

            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_jzxdm_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新箱号"
                    android:textColor="@color/gray_333333"
                    android:textSize="@dimen/font_20sp"/>

                <TextView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_20dp"
                    android:background="@drawable/text_shape_white"
                    android:paddingBottom="@dimen/padding_10dp"
                    android:paddingLeft="@dimen/padding_15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="@dimen/padding_10dp"
                    android:textColor="@color/gray_333333"
                    android:textSize="@dimen/font_20sp"
                    tools:text="TBJU1100112"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_jzxdm"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/button_shape">

                    <TextView
                        android:id="@+id/btn_scan"
                        android:layout_width="130dp"
                        android:layout_height="@dimen/padding_50dp"
                        android:background="@mipmap/bg_button"
                        android:gravity="center"
                        android:text="扫描换箱"
                        android:textColor="@color/gray_333333"
                        android:textSize="@dimen/font_18sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_jzxdm"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/padding_20dp"
                    android:background="@drawable/button_shape">

                    <TextView
                        android:id="@+id/btn_commit"
                        android:layout_width="130dp"
                        android:layout_height="@dimen/padding_50dp"
                        android:background="@mipmap/bg_button"
                        android:gravity="center"
                        android:text="提 交"
                        android:textColor="@color/gray_333333"
                        android:textSize="@dimen/font_18sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_55dp"
            android:layout_marginLeft="@dimen/padding_4dp"
            android:layout_marginRight="@dimen/padding_4dp"
            android:layout_marginTop="@dimen/padding_10dp"
            android:paddingTop="@dimen/padding_12dp"
            android:background="@drawable/bg_shpe"
            android:gravity="center_horizontal"
            android:text="换箱"
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/font_20sp"/>

    </RelativeLayout>
</LinearLayout>
