<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_1dp"
        android:background="@color/gray_444444">
    </View>
    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_65dp"
        android:background="@color/blue_list_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/padding_1dp"
            android:layout_height="match_parent"
            android:background="@color/black">
        </View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:maxLines="2"
                android:id="@+id/tv_yundan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_15sp"
                tools:text="qqq123123123123"/>

            <TextView
                android:id="@+id/tv_zyjzxdm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_2dp"
                android:singleLine="true"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_16sp"
                tools:text="qqqqqqqqqq"/>
        </LinearLayout>


        <View
            android:layout_width="@dimen/padding_1dp"
            android:layout_height="match_parent"
            android:background="@color/black">

        </View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/xqmc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="2"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_15sp"
                tools:text="股东内股东内东内东内"/>

            <TextView
                android:id="@+id/xwdm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_2dp"
                android:singleLine="true"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_16sp"
                tools:text="xiang"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/padding_1dp"
            android:layout_height="match_parent"
            android:background="@color/black">
        </View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_press_selector"
                android:elevation="@dimen/padding_10dp"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_5dp"
                android:paddingLeft="@dimen/padding_15dp"
                android:paddingRight="@dimen/padding_15dp"
                android:paddingTop="@dimen/padding_5dp"
                android:singleLine="true"
                android:text="验箱"
                android:textColor="@color/white"
                android:textSize="@dimen/font_17sp"/>

        </LinearLayout>


        <View
            android:layout_width="@dimen/padding_1dp"
            android:layout_height="match_parent"
            android:background="@color/black">
        </View>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_1dp"
        android:background="@color/black">
    </View>
</LinearLayout>