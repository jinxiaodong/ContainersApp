<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/actionsheet_single"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_login_out"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_45dp"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/padding_23dp"
                android:layout_height="@dimen/padding_23dp"
                android:src="@mipmap/icon_login_out"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注销登录"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_16sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_0.5dp"
            android:background="@color/gray_E4E4E4">

        </View>

        <LinearLayout
            android:id="@+id/ll_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_45dp"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/padding_23dp"
                android:layout_height="@dimen/padding_23dp"
                android:src="@mipmap/icon_exit"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退出应用"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_16sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/actionsheet_single"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/main_blue"
        android:textSize="@dimen/font_16sp"/>
</LinearLayout>