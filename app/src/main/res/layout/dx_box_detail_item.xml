<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/top_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5dp"
        android:background="@color/divider">
    </View>

    <LinearLayout
        android:id="@+id/ll_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_65dp"
        android:background="@color/blue_list_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/padding_0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider">
        </View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="2"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_17sp"
                tools:text="1"/>


        </LinearLayout>


        <View
            android:layout_width="@dimen/padding_0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider">

        </View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_jzxdm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="2"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_13sp"
                tools:text="TBJU1000011"/>

            <TextView
                android:id="@+id/tv_zygclxdm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_2dp"
                android:singleLine="true"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_13sp"
                tools:text="空箱"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/padding_0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider">
        </View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ywzlx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="2"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_13sp"
                tools:text="股5西内"/>

            <TextView
                android:id="@+id/tv_ywz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_2dp"
                android:maxLines="2"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_13sp"
                tools:text="020013"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/padding_0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider">
        </View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_mbwzlx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="2"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_13sp"
                tools:text="股5西内"/>

            <TextView
                android:id="@+id/tv_mbwz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_2dp"
                android:maxLines="2"
                android:textColor="@color/gray_333333"
                android:textSize="@dimen/font_13sp"
                tools:text="000233111"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/padding_0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider">
        </View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_7dp"
            android:paddingRight="@dimen/padding_7dp">

            <TextView
                android:id="@+id/btn_hang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_press_selector"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_3dp"
                android:paddingTop="@dimen/padding_3dp"
                android:singleLine="true"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="@dimen/font_14sp"/>

        </LinearLayout>


        <View
            android:layout_width="@dimen/padding_0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider">
        </View>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0.5dp"
        android:background="@color/divider">
    </View>
</LinearLayout>