<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_44dp"
        android:background="@color/list_title"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">


        <View
            android:layout_width="@dimen/padding_0.5dp"
            android:layout_height="@dimen/padding_44dp"
            android:background="@color/divider">
        </View>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/padding_44dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="序号"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18sp"/>

        <View
            android:layout_width="@dimen/padding_0.5dp"
            android:layout_height="@dimen/padding_44dp"
            android:background="@color/divider">

        </View>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/padding_44dp"
            android:layout_weight="1.3"
            android:gravity="center"
            android:text="箱号"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18sp"/>

        <View
            android:layout_width="@dimen/padding_1dp"
            android:layout_height="@dimen/padding_44dp"
            android:background="@color/divider">
        </View>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/padding_44dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="原位置"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18sp"/>

        <View
            android:layout_width="@dimen/padding_0.5dp"
            android:layout_height="@dimen/padding_44dp"
            android:background="@color/divider">
        </View>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/padding_44dp"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="目标位置"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18sp"/>

        <View
            android:layout_width="@dimen/padding_0.5dp"
            android:layout_height="@dimen/padding_44dp"
            android:background="@color/divider">
        </View>

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/padding_44dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18sp"/>

        <View
            android:layout_width="@dimen/padding_0.5dp"
            android:layout_height="@dimen/padding_44dp"
            android:background="@color/divider">
        </View>
    </LinearLayout>

    <com.project.container.containersapp.frame.view.recycleview.LoadMoreRecyclerView
        android:id="@+id/loadMoreRecycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.project.container.containersapp.frame.view.recycleview.LoadMoreRecyclerView>
</LinearLayout>

