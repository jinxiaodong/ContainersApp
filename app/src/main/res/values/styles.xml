<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_blue</item>
        <item name="colorPrimaryDark">@color/main_blue</item>
        <item name="colorAccent">@color/main_blue</item>
        <item name="alertDialogTheme">@style/Theme.AppCompat.Light.Dialog.Alert.Self</item>
        <!-- 使用swipebacklayout 需要加上的属性 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--系统dilog样式-->
    <style name="Theme.AppCompat.Light.Dialog.Alert.Self" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!--修改AlertDialog按钮的颜色-->
        <item name="colorAccent">@color/main_blue</item>
    </style>


    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_loaddialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="Dialog_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- activity不变暗 -->
        <!-- 设置window背景透明，不变暗 -->
    </style>

    <style name="toolbar_imgbutton_style">
        <item name="android:layout_width">@dimen/padding_30dp</item>
        <item name="android:layout_height">@dimen/padding_30dp</item>
        <item name="android:padding">@dimen/padding_3dp</item>
    </style>

    <style name="edit_style">
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/gray_999999</item>
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:padding">@dimen/padding_10dp</item>
        <item name="android:textColor">@color/gray_666666</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="divider_style">
        <item name="android:background">@color/gray_E4E4E4</item>
    </style>

    <style name="edit_pwd_style" parent="edit_style">
        <item name="android:inputType">textPassword</item>
        <item name="android:maxLength">20</item>
    </style>
</resources>
